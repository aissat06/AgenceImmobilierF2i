{% extends 'base.html.twig' %}
{% block title %}
	Créer un nouveau bien
{% endblock %}
{% block body %}
	<div class="container mt-4">
		<h2>
			{% if function == 'create' %}
				Créer un
			{% else %}
				Modifier le
			{% endif %}
			bien</h2>
		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-4">
				{{ form_row(form.title) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.surface) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.price) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-2">
				{{ form_row(form.rooms) }}
			</div>
			<div class="col-md-2">
				{{ form_row(form.floor) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-5">
				{{ form_row(form.address) }}
			</div>
			<div class="col-md-2">
				{{ form_row(form.city) }}
			</div>
			<div class="col-md-1">
				{{ form_row(form.postalCode) }}
			</div>
			<div class="col-md-2">
				{{ form_row(form.sold) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				{{ form_row(form.description) }}
			</div>
		</div>
        
        <div class="row">
			<div class="col-md-12">
				{{ form_row(form.image) }}
			</div>
		</div>
        <div class="row">
			<div class="col-md-12">
				{{ form_row(form.createdAt) }}
			</div>
		</div>
		<button class="btn btn-primary mt-2">
			{% if function == 'create' %}Créer{% else %}Modifier
			{% endif %}
		</button>
		{{ form_end(form) }}
	</div>
</div>{% endblock %}
